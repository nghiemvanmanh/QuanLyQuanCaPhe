@model QuanLyQuanCaPhe.Models.NguyenLieuModel

@{
    ViewData["Title"] = "Thêm Nguyên Liệu";
}

<h2>Thêm Nguyên Liệu</h2>

<form asp-action="Create" method="post">
    <div class="form-group" hidden="true">
        <label asp-for="PK_sMaNL">Mã Nguyên Liệu</label>
        <input asp-for="PK_sMaNL" class="form-control" />
        <span asp-validation-for="PK_sMaNL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="sTenNL">Tên Nguyên Liệu</label>
        <input asp-for="sTenNL" class="form-control" />
        <span asp-validation-for="sTenNL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="sDonVi">Đơn Vị</label>
        <input asp-for="sDonVi" class="form-control" />
        <span asp-validation-for="sDonVi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="fConLai">Số lượng</label>
        <input asp-for="fConLai" class="form-control" />
        <span asp-validation-for="fConLai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FK_sMaNCC">Nhà Cung Cấp</label>
        <select asp-for="FK_sMaNCC" class="form-control"
                asp-items="@(new SelectList(ViewBag.nhacungcap,"PK_sMaNCC", "sTenNCC"))">
            <option value="">Chọn Nhà Cung Cấp</option>
        </select>
        <span asp-validation-for="FK_sMaNCC" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

<h3>Danh sách Nguyên Liệu hiện có</h3>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Mã Nguyên Liệu</th>
            <th>Tên Nguyên Liệu</th>
            <th>Đơn Vị</th>
            <th>Số Lượng Còn Lại</th>
            <th>Mã Nhà Cung Cấp</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.nguyenlieu != null)
        {
            foreach (var item in ViewBag.nguyenlieu)
            {
                <tr>
                    <td>@item.PK_sMaNL</td>
                    <td>@item.sTenNL</td>
                    <td>@item.sDonVi</td>
                    <td>@item.fConLai</td>
                    <td>@item.FK_sMaNCC</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>
